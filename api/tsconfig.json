{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "../dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../client/src/shared/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
} 