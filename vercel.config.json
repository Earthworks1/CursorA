{
  "version": 2,
  "framework": "react",
  "outputDirectory": "client/dist",
  "buildCommand": "cd client && npm run vercel-build",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/server/index.ts" },
    { "src": "/(.*)", "dest": "/index.html", "status": 200 }
  ],
  "cleanUrls": true,
  "trailingSlash": false
} 