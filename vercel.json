{
  "version": 2,
  "outputDirectory": "client/dist",
  "functions": {
    "api/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "^/api/health",
      "dest": "/api/health.ts"
    },
    {
      "src": "^/api/workload/(.*)",
      "dest": "/api/workload.ts"
    },
    {
      "src": "^/api/(.*)",
      "dest": "/api/vercel.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "status": 200,
      "dest": "/index.html"
    }
  ],
  "buildCommand": "cd client && npm run vercel-build"
} 