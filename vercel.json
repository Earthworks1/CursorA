{
  "version": 2,
  "routes": [
    {
      "src": "/(.*)",
      "status": 200,
      "headers": { "Content-Type": "text/html; charset=utf-8" },
      "dest": "client/dist/index.html"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/index.ts" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
} 